<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.joseseie.todolist.CadUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/nomeDosCampos"
            android:text="@string/usuario_txtNome"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtNome"
            android:inputType="text"/>

        <TextView
            style="@style/nomeDosCampos"
            android:text="@string/usuario_txtLogin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtLogin"
            android:inputType="text"/>

        <TextView
            style="@style/nomeDosCampos"
            android:text="@string/usuario_txtSenha"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtSenha"
            android:inputType="textPassword"/>

    </LinearLayout>

</ScrollView>
